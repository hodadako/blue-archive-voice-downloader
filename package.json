{
  "name": "bluearchive-voice-downloader",
  "version": "0.1.0",
  "description": "Blue Archive voice downloader desktop app",
  "main": "src/main.js",
  "author": "Daniel",
  "license": "MIT",
  "scripts": {
    "students:sync": "node scripts/sync-students.js",
    "students:images:sync": "node scripts/sync-student-images.js",
    "voices:sync": "node scripts/sync-voice-links.js",
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac dmg",
    "build:mac:x64": "electron-builder --mac dmg --x64",
    "build:mac:arm64": "electron-builder --mac dmg --arm64",
    "build:mac:universal": "electron-builder --mac dmg --universal",
    "build:win": "electron-builder --win nsis",
    "build:win:x64": "electron-builder --win nsis --x64",
    "build:win:arm64": "electron-builder --win nsis --arm64",
    "build:linux:x64": "electron-builder --linux AppImage --x64",
    "build:linux:arm64": "electron-builder --linux AppImage --arm64"
  },
  "dependencies": {
    "axios": "^1.8.2",
    "cheerio": "^1.0.0",
    "fuse.js": "^7.1.0"
  },
  "devDependencies": {
    "electron": "^34.0.1",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.daniel.bluearchivevoice",
    "productName": "BlueArchiveVoiceDownloader",
    "icon": "icons/icon.png",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "icons/**/*",
      "package.json"
    ],
    "mac": {
      "icon": "icons/icon.png",
      "target": [
        "dmg"
      ],
      "category": "public.app-category.utilities"
    },
    "win": {
      "icon": "icons/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
